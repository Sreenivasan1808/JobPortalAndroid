<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddJob">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_green"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:navigationIconTint="@color/white"
        app:title="Post a new Job"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15sp"
        android:layout_gravity="center"
        >

        <EditText
            android:id="@+id/roleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_marginVertical="15sp"
            android:hint="Role (eg.Software Developer)" />

        <EditText
            android:id="@+id/orgTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_marginVertical="15sp"
            android:hint="Organization (eg. Amazon)" />

        <EditText
            android:id="@+id/descTxt"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:layout_marginVertical="15sp"
            android:hint="Job Description"/>

        <EditText
            android:id="@+id/salaryTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_marginVertical="15sp"
            android:hint="Salary (eg. 7-8LPA)" />

        <EditText
            android:id="@+id/locTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_marginVertical="15sp"
            android:hint="Work Location (eg. Bangalore, India)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginVertical="15sp"
            android:gravity="end">

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cancel_button"
                android:text="Cancel"
                android:textColor="@color/black"
                app:backgroundTint="@null"
                android:layout_marginHorizontal="5sp"/>

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button"
                android:text="Save"
                app:backgroundTint="@null"
                android:layout_marginLeft="5sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>